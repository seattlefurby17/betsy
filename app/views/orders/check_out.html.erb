<%= form_with model: @order, method: :post do |f| %>

    <%= f.label :email  %>
    <%= f.text_area :email %>

    <%= f.label :address %>
    <%= f.text_field :address %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :card_number %>
    <%= f.text_field :card_number %>

    <%= f.label :expiration_month %>
    <%= f.text_field :expiration_month %>

    <%= f.label :expiration_year %>
    <%= f.text_field :expiration_year %>

    <%= f.label :security_code %>
    <%= f.text_field :security_code %>

    <%= f.label :zip_code %>
    <%= f.text_field :zip_code %>

  <%= f.submit 'Make Purchase' %>
  
<% end %>