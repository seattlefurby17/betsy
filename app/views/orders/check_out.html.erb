<% if @order.errors.any? %>
  <ul class="errors">
    <% @order.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<div class="check_out_order">
  <%= form_with model: @order, method: :post do |f| %>

    <%= f.label :email  %>
    <%= f.text_field :email, required: true %>

    <%= f.label :address %>
    <%= f.text_area :address, required: true %>

    <%= f.label :name %>
    <%= f.text_field :name, required: true %>

    <%= f.label :card_number %>
    <%= f.text_field :card_number, required: true %>

    <%= f.label :expiration_month %>
    <%= f.text_field :expiration_month, required: true %>

    <%= f.label :expiration_year %>
    <%= f.text_field :expiration_year, required: true %>

    <%= f.label :security_code %>
    <%= f.text_field :security_code, required: true %>

    <%= f.label :zip_code %>
    <%= f.text_field :zip_code, required: true %>

    <%= f.submit 'Make Purchase' %>
    
  <% end %>
</div>