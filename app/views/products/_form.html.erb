<%= form_with model: @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :price %>
  <%= f.text_field :price %>

  <%= f.label :stock %>
  <%= f.text_field :stock %>

  <%= f.label :photo_url %>
  <%= f.text_field :photo_url %>

  <%= f.hidden_field :merchant_id, value: @current_merchant.id %>

  <%= f.submit button_name %>
<% end %>