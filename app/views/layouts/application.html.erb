  <body>
    <section class = "nav-bar-11">
      <!-- Navigation -->
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
          <%= link_to "pEtsy Shop", root_path, class: "navbar-brand" %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ml-auto">
              <li class="nav-item active">
                <%= link_to "Home", root_path, class: "nav-link" %>
                  <span class="sr-only">(current)</span>
                </a>
              </li>
              <li class="nav-item">
                <%= link_to "Merchants", merchants_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Products", products_path, class: "nav-link" %>
              </li>
              <%# if Order.find_by(id: @shopper).status == "shopping"  %>
                <li class="nav-item">
                  <%= link_to "Show Cart", cart_path, class: "nav-link" %>
                </li>
              <%# else %>
                <li class="nav-item">
                  <%= link_to "Your Orders", orders_path, class: "nav-link" %>
                </li>
              <%# end %>
                <% if @current_merchant %>
                <li class="nav-item">
            <strong><%= link_to "Welcome #{@current_merchant.username}",
                                merchant_path(@current_merchant.id), class: "nav-link" %>  </strong>
                </li>
                <li class="nav-item">
                <%= link_to "Merchant Dashboard", orders_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                  <%= link_to "Add a product", new_product_path(@current_merchant.id),
                              class: "nav-link"%>
                </li>
                <li class="nav-item">
                  <%= link_to "Log out", logout_path, method: "delete", class: "nav-link" %>
                </li>
            <% else %>
                <li class="nav-item">
                  <%= link_to "Login with Github", github_login_path, class: "nav-link" %>
                </li>
                <% end %>
              </li>

            </ul>
          </div>
        </div>
      </nav>
    </section>

<!--     Alert container-->
    <section class="alert__container">
      <% flash.each do |name, message| %>
        <% if name == "success" %>
          <div class="alert alert-success">
            <span><%= message %></span>
          </div>
        <% else %>
          <div class="alert alert-warning">
            <span> <%= message  %> </span>
          </div>
        <% end %>
      <% end %>
    </section>

    <%= yield %>

